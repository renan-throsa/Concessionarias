﻿@{
    ViewData["Title"] = "Novo Fabricante";

    List<string> erros = ViewBag.Erros;

    var paises = (new List<string>() { "China", "Estados Unidos", "Japão", "Alemanha", "Coreia do Sul", "Índia", "México", "Espanha", "Brasil", "Canadá", "França", "Tailândia", "Reino Unido", "Turquia", "Rússia", "Chéquia", "Indonésia", "Itália" })
    .OrderBy(x => x)
    .Select(x => new SelectListItem() { Value = x, Text = x });
}

@model ModeloInserçãoFabricante

@if (erros is not null && erros.Any())
{
    <ul>
        @foreach (string erro in erros)
        {

            <li><p style="color:red">@erro</p></li>
        }
    </ul>

}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>
                        Novo Fabricante
                        <a asp-controller="Fabricante" asp-action="Listagem" class="btn btn-danger float-end">Voltar</a>
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Fabricante" asp-action="Criar" method="POST">

                        <div class="mb-3">
                            <label asp-for="Nome">Preencha o nome do fabricante</label>
                            <input asp-for="Nome" type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="PaisOrigem">Selecione o país de origem</label>
                            <select asp-for="PaisOrigem" class="form-control" asp-items="paises">
                                <option value="">Selecione</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="AnoFundacao">Insira o ano de fundação</label>
                            <input asp-for="AnoFundacao" type="number" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Website">Adicione a URL do website</label>
                            <input asp-for="Website" type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Inserir Fabricante</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#PaisOrigem').select2();
        });
    </script>
}