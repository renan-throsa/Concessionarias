﻿@{
    ViewData["Title"] = "Detalhes Fabricante";
    List<string> erros = ViewBag.Erros;
    bool podeAtualizar = ViewBag.PodeAtualizar;
}

@model ModeloVisualizaçãoFabricante

@if (erros is not null && erros.Any())
{
    <ul>
        @foreach (string erro in erros)
        {

            <li><p style="color:red">@erro</p></li>
        }
    </ul>

}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>
                        Detalhes Fabricante
                        <a asp-controller="Fabricante" asp-action="Listagem" class="btn btn-danger float-end">Voltar</a>
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Fabricante" asp-action="Detalhes" method="Post">

                        <input hidden asp-for="FabricanteId" />

                        <div class="mb-3">
                            <label asp-for="Nome">Nome do fabricante</label>
                            <input readonly asp-for="Nome" type="text" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaisOrigem">País de origem</label>
                            <input readonly asp-for="PaisOrigem" type="text" class="form-control">
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="AnoFundacao">Nno de fundação</label>
                            <input readonly asp-for="AnoFundacao" type="number" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Website">URL do website</label>
                            <input readonly asp-for="Website" type="text" class="form-control">
                        </div>

                        <div class="mb-3">
                            @if (podeAtualizar)
                            {
                                <button type="submit" class="btn btn-danger">Excluir Fabricante</button>
                            }
                            else
                            {
                                <button type="submit" class="disabled btn btn-danger">Excluir Fabricante</button>
                            }
                           
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>