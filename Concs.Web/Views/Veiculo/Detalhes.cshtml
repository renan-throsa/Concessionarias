﻿@{
    ViewData["Title"] = "Detalhes Veículo";

    List<string> erros = ViewBag.Erros;
    bool podeAtualizar = ViewBag.PodeAtualizar;
    
}

@model ModeloVisualizaçãoVeiculo

@if (erros is not null && erros.Any())
{
    <ul>
        @foreach (string erro in erros)
        {

            <li><p style="color:red">@erro</p></li>
        }
    </ul>

}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4>
                        Detalhes Veículo
                        <a asp-controller="Veiculo" asp-action="Listagem" class="btn btn-danger float-end">Voltar</a>
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Veiculo" asp-action="Detalhes" method="Post">

                        <input hidden asp-for="VeiculoId" />

                        <div class="mb-3">
                            <label asp-for="Modelo">Modelo do veículo</label>
                            <input readonly asp-for="Modelo" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label asp-for="TipoVeiculo.Tipo">Fabricante</label>
                            <input readonly asp-for="TipoVeiculo.Tipo" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label asp-for="Preco">Preço do veiculo</label>
                            <input readonly asp-for="Preco" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label asp-for="AnoFabricacao">Ano de fabricação</label>
                            <input readonly  asp-for="AnoFabricacao" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label asp-for="Fabricante.Nome">Fabricante</label>
                            <input readonly asp-for="Fabricante.Nome" class="form-control">
                        </div>   

                        <div class="mb-3">
                            <label asp-for="Descricao">Descrição</label>
                            <input readonly asp-for="Descricao" class="form-control">
                        </div>
                        <div class="mb-3">
                            @if (podeAtualizar)
                            {
                                <button type="submit" class="btn btn-danger">Excluir Veículo</button>
                            }
                            else
                            {
                                <button class="disabled btn btn-danger">Excluir Veículo</button>
                            }                            
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>